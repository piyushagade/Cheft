<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="No timers active."
                    android:textSize="8.4pt"
                    android:textColor="#ff9800"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/status_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nothing to worry about!"
                    android:layout_below="@+id/status_title"
                    android:layout_marginTop="10px"
                    android:textSize="6.4pt"
                    android:textStyle="italic"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently used"
        android:textSize="9.4pt"
        android:textColor="#85827d"
        android:layout_marginTop="25dp"
        android:typeface="sans"
        android:layout_below="@+id/card_view"
        android:layout_alignLeft="@+id/card_view"
        android:layout_alignStart="@+id/card_view" />

    <android.support.v7.widget.CardView
        android:id="@+id/recent_card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"

        android:layout_alignTop="@+id/textView5">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/recent_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="No recent timers."
                    android:textSize="8.4pt"
                    android:textColor="#ff9800"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>